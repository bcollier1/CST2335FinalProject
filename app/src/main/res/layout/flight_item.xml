<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/flight_gate"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="#009688"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/airline"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/AirportDisplayBoard.Hint.Gate"
        android:textColor="#009688"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/airline"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/flight_number"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/AirportDisplayBoard.Hint.Flight_Number"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/status_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/airline"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:text="@string/AirportDisplayBoard.Hint.Airline_Name"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/status_image"
        app:layout_constraintTop_toBottomOf="@id/flight_number" />

    <TextView
        android:id="@+id/departure_iata"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_marginStart="24dp"
        android:text="@string/AirportDisplayBoard.Hint.Departure"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/flight_number"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:layout_marginStart="70dp"
        android:text="->"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/flight_number"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/arrival_iata"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_marginStart="100dp"
        android:text="@string/AirportDisplayBoard.Hint.Arrival"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/flight_number"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/status_image"
        android:layout_width="48dp"
        android:layout_height="49dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/flight_on_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>